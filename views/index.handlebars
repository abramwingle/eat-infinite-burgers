<h1 class="text-center">EAT AS MANY BURGERS AS YOU LIKE</h1>
<h3 class="text-center">(but remember, they go straight to your thighs. And then explode.)</h3>
<br><br><br>
  <div class="row">

    <div class="col-md-6">

      <h4 class="text-center">To <del>do</del> <b>EAT</b> list!</h4>

        <ul class="list-group">

        {{#each burgers}}
          {{#unless this.devoured}}

          <li class="list-group-item">

            <div class="input-group">

              <p> {{this.burger_name}} </p>

              <span class="input-group-btn">

                <form action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                  <button class="btn btn-default btn-sm" type="submit">Eat this >:) </button>
                </form>
              
              </span>
            
            </div>
          
          </li>

          {{/unless}}
        {{/each}}

      </ul>

    </div>

    <div class="col-md-6 text-center">

      <h4>Ate list</h4>

      <div class="panel panel-default">

        <ul class="list-group">

        {{#each burgers}}
          {{#if this.devoured}}

          <li class="list-group-item">

            <p>{{this.burger_name}} </p>

          </li>

          {{/if}}
        {{/each}}

        </ul>

      </div>

    </div>


  <div class="row text-center">

  <div class="col-md-12 text-center ">

    <p class="text-center"> Enter the name of <i>any</i> burger you want and add it to the queue! </p>

    <form class="create-update-form" action="/" method="POST">

      <div class="form-group text-center">
        <textarea class="form-control input-md" type="text" name="name" rows="3"> </textarea>
      </div>

      <button class="btn btn-default btn-lg" type="submit">Add this masterpiece</button>
    </form>

  </div>

  </div>

